        msg+="<b>-------------SEJAM BEM VINDOS-------------</b>\n"
        msg+="=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=√ó=\n\n"
        msg+="<b>OFFICIAL KUMULTRICKS SELLER</b>\n"
	msg+="<b>VALID:</b> 10 MONTHS\n"
	msg+="<b>EMAIL: </b>support@kumultricks.live\n"
	msg+="<b>PRESS ‚ÄúBUY ACCESS‚Äù AND SEND YOUR PROOF</b>\n\n"
